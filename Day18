
package isc;

import java.util.Scanner;

public class Day18 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int a = sc.nextInt();
        int b =a;
        for (int i = a; i >0; i--) {
            b -= i-1;
        }
        System.out.println(b);
    }
}
